    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "PATH=/usr/lib/llvm-7/bin:$PATH CC=clang CXX=clang++ bazel build --remote_http_cache=http://192.168.2.232:10001/cache/ --experimental_strict_action_env -c dbg //:benchmark_main",
            "problemMatcher":["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build-test",
            "type": "shell",
            "command": "PATH=/usr/lib/llvm-7/bin:$PATH CC=clang CXX=clang++ bazel build --remote_http_cache=http://192.168.2.232:10001/cache/ --experimental_strict_action_env -c dbg //:benchmark_test",
            "problemMatcher":["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }            
        },
        {
            "label": "run-test",
            "type": "shell",
            "command": "PATH=/usr/lib/llvm-7/bin:$PATH CC=clang CXX=clang++ bazel test --cache_test_results=no --remote_http_cache=http://192.168.2.232:10001/cache/ --experimental_strict_action_env -c dbg //:benchmark_test",
            "problemMatcher":["$gcc"],
            "group": {
                "kind": "test",
                "isDefault": true
            }            
        }

    ]
}